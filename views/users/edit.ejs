<%-include('../partials/header.ejs') %>

<body>
    <%-include('../partials/navbar.ejs') %>
        <%-include('../partials/messages.ejs') %>
    
    <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            
            <div class="col-md-4 offset-md-4 col-sm-10 offset-sm-1">
              <br><br>
              <div class="card">
            
                <div class="card-header">
                  <h3 class="panel-title">Atualizar Usuário</h3>
                </div>
                
                <form method="POST" action="/users/update">
                    <input type="hidden" name="id" value="<%= user.id %>">
            
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="row mb-3">
                            <label for="inputEmail3" class="col-sm-12 col-form-label">Nome*</label>
                            <input type="text" placeholder="Insira o nome do usuário" name="name" class="form-control" value="<%= user.name %>"><br>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="row mb-3">
                        <label for="inputEmail3" class="col-sm-12 col-form-label">E-mail*</label>
                        <input type="email" placeholder="Insira o email do usuário" name="email" class="form-control" value="<%= user.email %>"><br>
                    </div>                  

                    <div class="row mb-3">
                        <div class="row mb-3">
                        <label for="inputEmail3" class="col-sm-12 col-form-label" value="<% user.password %>">Senha*</label>
                        <input type="password" placeholder="Senha" name="password" class="form-control"><br>
                    </div>

                    <div class="row mb-3">
                        <div class="row mb-3">
                        <label for="inputEmail3" class="col-sm-12 col-form-label" value="<% user.password %>">Confirmar Senha*</label>
                        <input type="password" placeholder="Repira a senha" name="confirm_password" class="form-control"><br>
                    </div>

                </div>
            
                <div class="card-footer text-center d-grid gap-2">
                    <button class="btn btn-success">Cadastrar</button>
                </div>
            
              </div>
            </div>
            
          </div>
        </div>            
    </div>

   
</body>

<%-include('../partials/footer.ejs') %>