<%-include('../partials/header.ejs') %>
<body>
    <%-include('../partials/navbar.ejs') %>
    <div class="container">
        <%-include('../partials/messages.ejs') %>
        <div class="card">
            <div class="card-header">
              <div class="panel-title">Alunos</div>
            </div>  
        
            <table class="table table-bordered ">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Nome</th>
                        <th>CPF</th>
                        <th>E-mail</th>
                        <th colspan="2">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => {%>
                        <tr>
                            <td><%= user.id %></td>
                            <td><%= user.name %></td>
                            <td><%= user.cpf %></td>
                            <td><%= user.email %></td>
                            <td><a href="/users/show/<%= user.id %>">Visualizar </a> </td>
                            <td><a href="/users/edit/<%= user.id %>">Atualizar </a> </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>

            <div class="card-footer text-center">
                <a href="/>" class="btn btn-primary btn-block">Voltar </a>
            </div>   
            
    </div>
    <br><br>
</body>
<%-include('../partials/footer.ejs') %>