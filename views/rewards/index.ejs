<%-include('../partials/header.ejs') %>
<body>
    <%-include('../partials/navbar.ejs') %>
    <div class="container">
        <%-include('../partials/messages.ejs') %>
        <div class="card">
            <div class="card-header">
              <div class="panel-title">Recompensas</div>
            </div>  
        
            <table class="table table-bordered ">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Recompensa</th>
                        <th>Classificação no Ranking</th>
                        <th colspan="2">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <% rewards.forEach(reward => {%>
                        <tr>
                            <td><%= reward.id %></td>
                            <td><%= reward.name %></td>
                            <td><%= reward.rating %></td>
                            <td><a href="/rewards/show/<%= reward.id %>">Visualizar </a> </td>
                            <td><a href="/rewards/edit/<%= reward.id %>">Atualizar </a> </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>

            <div class="card-footer text-center">
                <a href="/rewards/new" class="btn btn-success btn-block">Cadastrar Recompensa</a>
                <a href="/" class="btn btn-primary btn-block">Voltar </a>
            </div>   
            
    </div>
    <br><br>
</body>
<%-include('../partials/footer.ejs') %>