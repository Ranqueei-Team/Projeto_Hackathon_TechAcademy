<%-include('../partials/header.ejs') %>
  <%-include('../partials/navbar-login.ejs') %>
    <main class="content-top-position featurette-divider">
      <div class="container main-login">
        <div class="row">
          <div class="col-md-2">
            <%-include('../partials/sidebar.ejs') %>
          </div>
          <div class="col-md-10">
            <%-include('../partials/messages.ejs') %>
              <div class="card">

                <div class="card-header">
                  <h3 class="panel-title">Cadastar Recompensa</h3>
                </div>

                <form method="POST" action="/rewards/create">
                  <input type="hidden" name="classroomId" value="<%= classroomId %>">
                  <div class="card-body">
                    <div class="row mb-3">
                      <div class="row mb-3">
                        <label for="inputEmail3" class="col-sm-12 col-form-label">Nome da Recompensa*</label>
                        <input type="text" placeholder="Informe o nome da recompensa" name="name"
                          value="<%= typeof name != 'undefined' ? name : '' %>" class="form-control" required><br>
                      </div>
                    </div>

                    <div class="row mb-3">
                      <div class="row mb-3">
                        <label for="inputEmail3" class="col-sm-12 col-form-label">Classificação da Equipe no
                          Ranking*</label>
                        <input type="number" name="rating" size="3"
                          value="<%= typeof rating != 'undefined' ? rating : '' %> required" class="form-control"
                          required><br>
                      </div>
                    </div>
                  </div>
                  <div class="card-footer text-center d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-block">Cadastrar Recompensa</button>
                  </div>

                </form>
              </div>
              <br><br><br>
          </div>
        </div>
      </div>
      <br><br>
    </main>
    <%-include('../partials/footer-next-to-sidebar.ejs') %>