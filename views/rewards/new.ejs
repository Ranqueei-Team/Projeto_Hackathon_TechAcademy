<%-include('../partials/header.ejs') %>
<body>
  <%-include('../partials/navbar.ejs') %>
    <main>
      <div class="container marketing">
        <div class="row form">
          <div class="col-md-6 offset-md-3">
            <%-include('../partials/messages.ejs') %>
            <div class="card">
          
              <div class="card-header">
                <h3 class="panel-title">Cadastar Recompensa</h3>
              </div>

              <form method="POST" action="/rewards/create">
                <input type="hidden" name="classroomId" value="<%= classroomId %>">
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="row mb-3">
                            <label for="inputEmail3" class="col-sm-12 col-form-label">Nome da Recompensa*</label>
                            <input type="text" placeholder="Informe o nome da recompensa" name="name"
                                value="<%= typeof name != 'undefined' ? name : '' %>"
                                class="form-control" required><br>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="row mb-3">
                            <label for="inputEmail3" class="col-sm-12 col-form-label">Classificação da Equipe no Ranking*</label>
                            <input type="number" name="rating" size="3" value="<%= typeof rating != 'undefined' ? rating : '' %> required"
                                class="form-control" required><br>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-center d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-block">Cadastrar Recompensa</button>
                </div>              
              </form>
            </div>
          </div>
        </div>
      </div>
    </main>
</body>
<%-include('../partials/footer.ejs') %>