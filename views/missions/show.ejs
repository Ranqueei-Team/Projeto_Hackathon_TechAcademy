<%-include('../partials/header.ejs') %>
<%-include('../partials/navbar-login.ejs') %>
<%-include('../partials/sidebar.ejs') %>
<main class="main-for-sidebar content-top-position featurette-divider col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <div class="container pt-3">
    <%-include('../partials/messages.ejs') %>
        <div class="card">
            <div class="card-header bg-dark">
                <div class="panel-title ">Missão</div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 ">
                <ul class="list-group">
                    <li class="list-group-item"><b>Nome da Missão:</b>
                        <%= mission.name %>
                    </li>
                    <li class="list-group-item"><b>Descrição da Missão:</b>
                        <%- mission.description %>
                    </li>
                    <li class="list-group-item"><b>Pontuação Máxima da Missão:</b>
                        <%= mission.point %>
                    </li>
                </ul>
            </div>
        </div>
        <div class="card-footer text-center d-grid gap-2">
            <a href="/missions" class="btn btn-primary">Voltar</a>
        </div>
    </div>
</main>
