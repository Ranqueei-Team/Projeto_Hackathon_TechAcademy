<%-include('../partials/header.ejs') %>
<%-include('../partials/navbar-login.ejs') %>
<main class="content-top-position main-content-divider">
    <div class="container main-login">
        <div class="row">
            <div class="col-md-2">
                <%-include('../partials/sidebar.ejs') %>
            </div>
            <div class="col-md-10">
                <div class="card">
                    <div class="card-header">
                        <div class="panel-title">Missões</div>
                    </div>

                    <table class="table table-striped ">
                        <thead class="table-dark">
                            <tr>
                                <th>Nome da Missão</th>
                                <th>Pontuação máxima</th>
                                <th colspan="2">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% missions.forEach(mission=> {%>
                                <tr>
                                    <td>
                                        <%= mission.name %>
                                    </td>
                                    <td>
                                        <%= mission.point %>
                                    </td>
                                    <td><a href="/missions/show/<%= mission.id %>"
                                            class="btn btn-success btn-sm">Visualizar Missão</a></td>
                                    <% if( locals.profileUser==="Teacher" ) { %>
                                        <td><a href="/missions/edit/<%= mission.id %>"
                                                class="btn btn-primary btn-sm">Atualizar Missão</a></td>
                                    <% } %>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                    <% if( locals.profileUser==="Teacher" ) { %>
                        <div class="card-footer text-center">
                            <a href="/missions/new" class="btn btn-primary btn-block">Cadastrar Missão</a>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</main>
<%-include('../partials/footer-next-to-sidebar.ejs') %>