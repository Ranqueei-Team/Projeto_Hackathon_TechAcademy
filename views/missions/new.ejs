<%-include('../partials/header.ejs') %>
<body onload="checkStorage()">
  <%-include('../partials/navbar-login.ejs') %>
  <%-include('../partials/sidebar.ejs') %>
  <main class="main-for-sidebar content-top-position featurette-divider col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <div class="container pt-3">
      <%-include('../partials/messages.ejs') %>
      <div class="card">
        <div class="card-header">
          <h3 class="panel-title">Cadastar Missão</h3>
        </div>

        <form method="POST" action="/missions/create">
          <input type="hidden" name="classroomId" value="<%= classroomId %>">
          <div class="card-body">
            <div class="row mb-3">
              <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-12 col-form-label">Nome da Missão*</label>
                <input type="text" placeholder="Informe um nome para a Missão" name="name"
                  value="<%= typeof name != 'undefined' ? name : '' %>" class="form-control" required><br>
              </div>
            </div>

            <div class="row mb-3">
              <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-12 col-form-label">Descrição da Missão</label>
                <textarea id="description" name="description" rows="5" cols="33"
                  placeholder="Descreva a Missão. Você pode inserir figuras, links, tabelas, formatar o texto, entre outros recursos."> </textarea>
              </div>
            </div>

            <div class="row mb-3">
              <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-12 col-form-label">Pontuação da Missão*</label>
                <input type="number" name="point" value="<%= typeof point != 'undefined' ? point : '' %>"
                  class="form-control" required><br>
              </div>
            </div>
          </div>
          <div class="card-footer text-center d-grid gap-2">
            <button type="submit" class="btn btn-primary btn-block">Cadastrar Missão</button>
          </div>
        </form>
      </div>
    </div>
  </main>
  <script type="application/javascript" src="/tinymce/tinymce.min.js"></script>
  <script type="application/javascript" src="/js/tinymce/tinymce-config.js"></script>
  <%-include('../partials/footer-next-to-sidebar.ejs') %>
</body>